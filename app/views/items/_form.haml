= form_for(@item, :html => {:multipart => true}) do |f|
  - if @item.errors.any?
    #error_explanation
      %h2= pluralize(@item.errors.count, "error", "prohibited this item from being saved")

      %ul
        - @item.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :category
    = f.select :category, Item::CATEGORIES

  .field
    = f.label :title
    = f.text_field :title
    
  .field
    = f.label :caption
    = f.text_field :caption

  .field
    = f.label :image
    = f.file_field :image
    
  .actions
    = f.submit
